{% if content.field_series_image %}
<div class="usa-collection__img">
    <a href="{{ url }}">{{ content.field_series_image }}</a>
</div>
{% endif %}


<div class="usa-collection__body">
  <h2 class="usa-collection__heading margin-bottom-1 font-body-lg"><a href="{{ url }}">{{ name }}</a></h2>

  <div class="usa-collection__description">
    {{ content.description }}
  </div>
</div> {# /close .usa-collection__body #}
