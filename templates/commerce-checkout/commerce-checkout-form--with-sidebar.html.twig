{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="grid-row grid-gap">
  <div class="desktop:grid-col-6 checkout--main">
    {{ form|without('sidebar', 'actions') }}
  </div>
  <div class="desktop:grid-col-6 checkout--sidebar">
    {{ form.sidebar }}
  </div>
  <div class="layout-region layout-region-checkout-footer">
    {{ form.actions }}
  </div>
</div>
