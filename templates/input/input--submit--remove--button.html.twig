{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% apply spaceless %}
    {% if input_group %}
        <div class="input-group usa-form-group">
    {% endif %}

    {% if prefix %}
        {{ prefix }}
    {% endif %}

    {% block input %}
      <button{{ attributes.addClass('usa-button usa-button--outline-secondary') }}>
      Remove&nbsp;
        <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
          <use xlink:href="/{{ directory }}/assets/img/sprite.svg#close"></use>
        </svg>
      </button>
    {% endblock %}

    {% if suffix %}
        {{ suffix }}
    {% endif %}

    {% if input_group %}
        </div>
    {% endif %}

    {{ children }}
{% endapply %}

